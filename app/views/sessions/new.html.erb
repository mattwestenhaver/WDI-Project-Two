<div class='login'>
  <h1>Log In</h1>
  <%= form_for :login, {url: login_path} do |f| %><br>
    <div>
      <%= f.email_field :email, placeholder: 'email', class: "form-control" %>
    </div><br>

    <div>
      <%= f.password_field :password, placeholder: 'password', class: "form-control" %>
    </div><br>

    <div>
      <%= f.submit 'Log In', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
