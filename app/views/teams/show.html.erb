<div class='team-name'>
  <div><%= link_to 'edit', edit_team_path %> | <%= link_to 'back', teams_path %></div>
  <h1><%= image_tag @team.logo %> <%= @team.name %></h1>
  <p><%= @team.description %></p>
</div>

<br>

<div class='wrapper'>
  <hr><br>
  <h5>Discussions:</h5>

  <% @team.posts.each do |post| %>
    <blockquote>
      <h4><%= link_to post.title, team_post_path(post) %></h4>
      <%= post.body %>
      <h6>By: <%= post.user.username %> -
      <%= time_ago_in_words post.created_at%> ago</h6>
    </blockquote><br>
  <% end %>

  <%= form_for [@team, @post] do |f| %>
  <h4>New Post:</h4>
    <div class='row'>
      <%= f.text_field :title, placeholder: 'post title', class: "form-control" %>
    </div><br>
    <div class='row'>
      <%= f.text_area :body, placeholder: 'what do you want to talk about?', class: "form-control" %>
    </div><br>
    <div class='row'>
      <%= f.submit class: 'btn btn-success' %>
    </div><br>
  <% end %>
</div>
