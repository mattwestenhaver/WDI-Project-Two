<h1>Edit <%= @team.name %></h1>
<%= form_for @team do |t| %>
  <div>
    <%= t.text_field :name, placeholder: 'team name', class: "form-control"%>
  </div><br>
  <div>
    <%= t.text_area :description, placeholder: 'team description', class: "form-control" %>
  </div><br>
  <div>
    <%= t.text_field :logo, placeholder: 'url to team logo', class: "form-control" %>
  </div><br>
  <div>
    <%= t.number_field :user_id, placeholder: 'user id', class: "form-control" %>
  </div><br>
  <div>
    <%= t.submit class: 'btn btn-success' %>
  </div>
<% end %>
